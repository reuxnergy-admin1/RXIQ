# ContentIQ API - Environment Variables
# Copy this file to .env and fill in your values

# OpenAI API Key (for summarization and sentiment analysis)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Redis Configuration (optional - falls back to in-memory cache)
REDIS_URL=redis://localhost:6379/0

# Rate Limiting
RATE_LIMIT_FREE=100/month
RATE_LIMIT_STARTER=2500/month
RATE_LIMIT_PRO=15000/month
RATE_LIMIT_BUSINESS=75000/month

# App Settings
APP_ENV=production
APP_DEBUG=false
LOG_LEVEL=info

# Sentry (optional - for error tracking)
SENTRY_DSN=

# RapidAPI Proxy Secret (set this in production)
# Get this from your RapidAPI provider dashboard
RAPIDAPI_PROXY_SECRET=

# CORS Origins (comma-separated)
CORS_ORIGINS=*

# Trusted Hosts (comma-separated, use * for all)
TRUSTED_HOSTS=*

# Request timeout for scraping (seconds)
SCRAPE_TIMEOUT=15

# Blocked URL patterns (comma-separated regex patterns)
BLOCKED_URL_PATTERNS=

# Cache TTL (seconds)
CACHE_TTL=3600

# Max content length for AI processing (characters)
MAX_CONTENT_LENGTH=50000

# Max request body size (bytes, default 1MB)
MAX_REQUEST_SIZE=1048576
